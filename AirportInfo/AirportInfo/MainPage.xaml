<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cvt="clr-namespace:AirportInfo.Converter"
             x:Class="AirportInfo.MainPage"
             Padding="50">

    <ContentPage.Resources>
        <ResourceDictionary>
            <cvt:InverseBoolConverter x:Key="InverseBool" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <Label Text="Inform an Airport IATA:" />
            <Entry Placeholder="AMS, GRU, NYC, etc..." x:Name="IATACode" />
            <Button Text="Get Airport Information" x:Name="Process" Clicked="Process_Clicked" />
        </StackLayout>
        <Label x:Name="AirportInfo"
               IsVisible="{Binding Source={x:Reference ProcessIndicator}, Path=IsVisible, Converter={StaticResource InverseBool}}"
               Grid.Row="1"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
        <ActivityIndicator x:Name="ProcessIndicator"
                               Grid.Row="1"
                               IsVisible="True"
                               VerticalOptions="CenterAndExpand" />
    </Grid>
</ContentPage>
